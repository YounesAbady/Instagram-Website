@model Instagram.Models.post

@{
    ViewBag.Title = "CreatePost";
}

<h2>CreatePost</h2>

@using (Html.BeginForm("CreatePost", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            @Html.LabelFor(x => x.ImagePath)
            @Html.ValidationMessageFor(x => x.ImagePath)
            <input type="file" name="ImageFile" required />
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.disc)
            @Html.TextBoxFor(x => x.disc)
            @Html.ValidationMessageFor(x => x.disc)

        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("My Profile", "ViewProfile","Profile")
    </div>
}

